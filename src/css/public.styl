html, body {
    background $f6f8f9
}
.__index {
    background $f6f8f9
    .header, .contern, .footer {
        width 1300px
        margin $marginAuto
    }
    .headerBox {
        height 100px
        background $ffffff
        .header {
            height 100%
            position relative
        }
    }
    .contern {
        overflow hidden
        min-height 900px
        margin 50px auto 100px
        .sidebar {
            width 300px
            height 100%
            float left
            padding-bottom 10000px
            margin-bottom -10000px
            > ul {
                margin-bottom 20px
                h2 {
                    color $999999
                    font-size $font-size24
                    height 50px
                    line-height 50px
                    a {
                        color $999999
                    }
                    img {
                        margin-right: $margin20
                        vertical-align middle
                        margin-top -4px
                    }
                }
                ul {
                    padding-left 45px
                    a {
                        color #333333
                        font-size $font-size16
                        height 50px
                        line-height 50px
                        display block
                    }
                }
            }
            .router-link-active {
                color $f25500    
            }
        }
        .main {
            width 1000px
            float left
            padding-bottom 10000px
            margin-bottom -10000px
            .crumbsNav {
                height 100px
                line-height 100px
                h2 {
                    color #333333
                    font-size 24px
                    display inline-block
                }
            }
            .mainContern {
                height 100%
            }
        }
    }
    .footer {
        padding-left 300px
        ul {
            overflow hidden
            border-bottom 1px solid #eeeeee
            li {
                float left
                margin-right 50px
                height 50px
                line-height 50px
                a {
                    color $999999
                    font-size $font-size14
                }
            }
        }
        p {
            height 50px
            line-height 50px
            color $999999
            font-size $font-size14
        }
    }
}


/*
* 按钮设置
*/
.addBtn {
    width: 100px;
    height: 50px;
    line-height: 50px;
    text-align: center;
    background: #f25500;
    color: #ffffff;
    font-size: 15px;
    border: none;
    border-radius: 5px;
}

/*
* 表格设置
*/
.tableDataList {
    background: $ffffff;
    overflow: hidden;
    padding: 30px;
}